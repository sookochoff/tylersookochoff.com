---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Tyler Sookochoff - Personal website and blog' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Fragment+Mono:wght@400&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --bg: #0a0a0a;
        --text: #8a8a8a;
        --text-bright: #a0a0a0;
        --heading: #ffffff;
        --accent: #FF5A36;
        --accent-hover: #FF8A6B;
        --border: #1f1f1f;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Fragment Mono', 'SF Mono', Monaco, monospace;
        background: var(--bg);
        color: var(--text);
        line-height: 1.7;
        max-width: 720px;
        margin: 0 auto;
        padding: 2.5rem 1.5rem;
        font-size: 15px;
      }
      
      a {
        color: var(--accent);
        text-decoration: underline;
        text-underline-offset: 3px;
        text-decoration-thickness: 1px;
      }
      
      a:hover {
        color: var(--accent-hover);
        text-decoration: underline;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: 'DM Sans', -apple-system, BlinkMacSystemFont, sans-serif;
        font-weight: 600;
        line-height: 1.3;
        margin: 2rem 0 1rem;
        color: var(--heading);
        letter-spacing: -0.02em;
      }
      
      h1 { font-size: 1.9rem; }
      h2 { font-size: 1.4rem; }
      h3 { font-size: 1.15rem; }
      
      p {
        margin-bottom: 1.25rem;
        color: var(--text);
      }
      
      strong, b {
        color: var(--text-bright);
        font-weight: 600;
      }
      
      header {
        margin-bottom: 3.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border);
      }
      
      header h1 {
        margin: 0;
        font-size: 1.3rem;
        font-weight: 700;
      }
      
      header h1 a {
        color: var(--heading);
        text-decoration: none;
      }
      
      header h1 a:hover {
        color: var(--accent);
        text-decoration: none;
      }
      
      nav {
        margin-top: 1rem;
      }
      
      nav a {
        margin-right: 1.5rem;
        font-size: 0.9rem;
        color: var(--text);
        text-decoration: none;
      }
      
      nav a:hover {
        color: var(--accent);
        text-decoration: underline;
      }
      
      .post-list {
        list-style: none;
      }
      
      .post-list li {
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border);
      }
      
      .post-list li:last-child {
        border-bottom: none;
      }
      
      .post-list h2 {
        margin: 0 0 0.35rem;
        font-size: 1.15rem;
        font-weight: 600;
      }
      
      .post-list h2 a {
        color: var(--heading);
        text-decoration: none;
      }
      
      .post-list h2 a:hover {
        color: var(--accent);
        text-decoration: underline;
      }
      
      .post-meta {
        font-size: 0.8rem;
        color: var(--text);
        margin-bottom: 0.5rem;
        font-family: 'Fragment Mono', monospace;
      }
      
      .post-description {
        color: var(--text);
        font-size: 0.95rem;
      }
      
      article h1 {
        font-size: 1.9rem;
        margin-bottom: 0.5rem;
        color: var(--heading);
      }
      
      article .post-meta {
        margin-bottom: 2.5rem;
      }
      
      article p {
        margin-bottom: 1.5rem;
      }
      
      pre {
        background: #111;
        padding: 1rem;
        border-radius: 6px;
        overflow-x: auto;
        margin-bottom: 1.5rem;
        border: 1px solid var(--border);
      }
      
      code {
        font-family: 'Fragment Mono', 'SF Mono', Monaco, monospace;
        font-size: 0.9em;
      }
      
      p code {
        background: #111;
        padding: 0.15rem 0.4rem;
        border-radius: 3px;
        border: 1px solid var(--border);
        color: var(--accent);
      }
      
      ul, ol {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
      }
      
      li {
        margin-bottom: 0.5rem;
      }
      
      blockquote {
        border-left: 2px solid var(--accent);
        padding-left: 1rem;
        margin: 1.5rem 0;
        color: var(--text-bright);
        font-style: italic;
      }
      
      hr {
        border: none;
        border-top: 1px solid var(--border);
        margin: 2.5rem 0;
      }
      
      footer {
        margin-top: 5rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border);
        text-align: center;
        font-size: 0.8rem;
        color: var(--text);
      }
      
      footer a {
        color: var(--text);
        text-decoration: underline;
      }
      
      footer a:hover {
        color: var(--accent);
      }
    </style>
  </head>
  <body>
    <header>
      <h1><a href="/">tyler sookochoff</a></h1>
      <nav>
        <a href="/">home</a>
        <a href="/blog">blog</a>
      </nav>
    </header>
    <slot />
    <footer>
      <p>Â© {new Date().getFullYear()} Tyler Sookochoff</p>
    </footer>
  </body>
</html>
